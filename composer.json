{
    "name": "extroverteddeveloper/wordpress-to-threads",
    "description": "WordPress plugin for posting to Threads and X",
    "type": "wordpress-plugin",
    "license": "MIT",
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.5"
    },
    "autoload": {
        "classmap": [
            "threads-auto-poster.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage"
    }
}
